# DEBUG=true
# DEBUG_DATABASE=true
# DEBUG_EMAIL=true
# ENABLE_DEV_TOOLS=true

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Alert Configuration
ALERT_EMAIL=support@coresis.app
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/your/webhook/url
ALERT_DISCORD_WEBHOOK=https://discord.com/api/webhooks/your/webhook/url

# Uptime Monitoring
UPTIME_MONITORING_ENABLED=true
UPTIME_CHECK_INTERVAL=60000

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Branding
BRAND_NAME=CoreSIS
BRAND_TAGLINE=Powering Pathways. Fueling Futures.
BRAND_LOGO_URL=https://coresis.app/logo.png
BRAND_FAVICON_URL=https://coresis.app/favicon.ico

# Contact Information
CONTACT_EMAIL=support@coresis.app
CONTACT_PHONE=+1-555-123-4567
CONTACT_ADDRESS=123 Education St, Learning City, LC 12345

# Social Media
SOCIAL_FACEBOOK=https://facebook.com/coresis
SOCIAL_TWITTER=https://twitter.com/coresis
SOCIAL_LINKEDIN=https://linkedin.com/company/coresis

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================

# Privacy Policy
PRIVACY_POLICY_URL=https://coresis.app/privacy
TERMS_OF_SERVICE_URL=https://coresis.app/terms

# Data Retention
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=3650

# GDPR Compliance
GDPR_ENABLED=true
GDPR_DATA_EXPORT_ENABLED=true
GDPR_DATA_DELETION_ENABLED=true

